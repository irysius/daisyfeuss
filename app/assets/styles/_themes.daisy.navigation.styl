// ---------------------------------
// :: Themes - Daisy - Navigation
// ---------------------------------

$gutter-width               = 1rem

// ---------------------------------

html, body
  height: 100%

.daisy
  &-main
    height: auto !important
    min-height: 100%
    margin-left: 15rem
    padding-left: 1rem
    padding-right: 1rem

  &-sidebar
    height: 100%
    padding: 3rem 0
    position: fixed
    top: 0
    width: 15.625rem /* 250px */

  &-nav
    &__version
      margin-top: 1.5rem
      margin-bottom: 0.75rem
      padding-left: 2rem
      padding-right: 2rem

    &__title
      color: $grey80
      font-weight: 600
      letter-spacing: .0625rem
      margin-top: 1.5rem
      margin-bottom: .75rem
      padding: 0 2rem
      text-transform: uppercase

      set-font-size($p)

    &__link
      display: block
      font-size: .875rem
      padding: 1rem 1rem 1rem 2rem
      width: 100%

      &:hover
        background: $grey20
        color: $grey90

  &-modules
  // For grouping multiple .daisy-module
    display: flex
    margin-left: -($gutter-width)
    margin-right: -($gutter-width)

  &-module
    background-color: $white
    border-top: 1px solid $grey40
    margin-top: 1.5rem
    margin-bottom: 3rem
    padding-top: 1.5rem

    &--main
      flex: 3
      margin-left: ($gutter-width)
      margin-right: ($gutter-width)

    &--sidebar
      flex: 1
      margin-left: ($gutter-width)
      margin-right: ($gutter-width)
